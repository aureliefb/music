<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title 'Mes musiques' %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
        {% block stylesheets %}
            {# { encore_entry_link_tags('app') }#}
        {% endblock %}

        {% block javascripts %}
            {#{ encore_entry_script_tags('app') }#}
        {% endblock %}
    </head>
    <body>
    <nav class="navbar navbar-expand-md navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{ path('app_home') }}"><img src="{{ asset('icons/music-note-beamed.svg') }}" alt="" width="20px"/> Musique</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item text-center">
                        <a class="nav-link" href="{{ path('app_groupes') }}">Artistes & Groupes</a>
                    </li>
                    <li class="nav-item text-center">
                        <a class="nav-link" href="{{ path('app_concerts') }}"><!--img src="{{ asset('icons/mic.svg') }}" alt="" width="15px"/--> Concerts</a>
                    </li>
                    <li class="nav-item text-center">
                        <a class="nav-link" href="{{ path('app_albums') }}">Discothèque</a>
                    </li>
                    <li class="nav-item text-center dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false"><!--img src="{{ asset('icons/tools.svg') }}" alt="" width="15px"/--> Admin</a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                            <li><a class="dropdown-item" href="{{ path('admin_groupes_index') }}">Artistes & Groupes</a></li>
                            <li><a class="dropdown-item" href="{{ path('admin_albums_index') }}">Discothèque</a></li>
                            <li><a class="dropdown-item" href="{{ path('admin_concerts_index') }}">Concerts</a></li>
                            <li><a class="dropdown-item" href="{{ path('admin_styles_index') }}">Styles de musique</a></li>
                        </ul>
                    </li>
                </ul>

                {%  if app.user %}
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a href="{{ path('logout') }}" class="nav-link">Déconnexion</a>
                        </li>
                    </ul>
                {% endif %}
                <form class="d-flex">
                    <input class="form-control me-2" type="search" placeholder="Recherche" aria-label="Recherche">
                    <button class="btn btn-outline-success" type="submit">Rechercher</button>
                </form>
            </div>
        </div>
    </nav>

    {% block body %}
        <div class="container">
            <div class="mt-4 mb-5 text-center">
                <h1>
                    <span><img src="{{ asset('icons/boombox.svg') }}" alt="" width="30px"/></span>
                    <span><img src="{{ asset('icons/volume-up-fill.svg') }}" alt="" width="30px"/></span>
                    Musique
                    <span><img src="{{ asset('icons/music-note-beamed.svg') }}" alt="" width="30px"/></span>
                    <span><img src="{{ asset('icons/music-note-list.svg') }}" alt="" width="30px"/></span>
                </h1>
            </div>

            <div class="row flex justify-content-center">            
                <div class="mt-5 col-xs-4 col-md-4 col-lg-3">
                    <a href="{{ path('app_groupes') }}">
                    <div class="card py-5 text-center">
                        <div class="card-body">
                            <div class="card-title">
                                <h2>Artistes & Groupes</h2>
                            </div>
                        </div>
                    </div>
                    </a>
                </div>
                <div class="mt-5 col-xs-4 col-md-4 col-lg-3">
                    <a href="{{ path('app_concerts') }}">
                    <div class="card py-5 text-center">
                        <div class="card-body">
                            <div class="card-title">
                                <h2>Concerts</h2>
                            </div>
                        </div>
                    </div>
                    </a>
                </div>
                <div class="mt-5 col-xs-4 col-md-4 col-lg-3">
                    <a href="{{ path('app_albums') }}">
                    <div class="card py-5 text-center">
                        <div class="card-body">
                            <div class="card-title">
                                <h2>Discothèque</h2>
                            </div>
                        </div>
                    </div>
                    </a>
                </div>            
            </div>

        </div>
    {% endblock %}
    </body>
</html>
