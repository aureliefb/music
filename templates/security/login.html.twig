{% extends 'base.html.twig' %}

{% block title 'Page de connexion' %}

{% block body %}
    <div class="container col-md-4 mt-4">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

    <form action="{{ path('login') }}" method="POST">
        <div class="form-group">
            <label for="username">Nom d'utilisateur</label>
            <input type="text" id="username" name="_username" class="form-control" value="{{ last_username }}">
        </div>
        <div class="form-group">
            <label for="password">Mot de passe</label>
            <input type="password" id="password" name="_password" class="form-control">
        </div>
        <button type="submit" class="btn btn-primary mt-4">Connexion</button>
    </form>
    </div>
{% endblock %}
