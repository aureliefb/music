{% extends 'base.html.twig' %}

{% block title %}Groupes{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Gestion des groupes</h1>

        <table class="table table-striped table-sm">
            <thead>
            <tr>
                <td>id</td>
                <td>Nom du groupe</td>
                <td>Styles</td>
                <td>Actions</td>
            </tr>
            </thead>
            <tbody>
            {% for band in bands %}
                <tr>
                    <td>{{ band.id }}</td>
                    <td>{{ band.artist }}</td>
                    <td>{# { band.IdMusicStyles }#}</td>
                    <td>
                        <button type="button" class="btn btn-primary btn-sm">Voir</button>
                        <a href="{{ path('admin_groupes_edit', {id:band.id}) }}"><button type="button" class="btn btn-warning btn-sm">Editer</button></a>
                        <form method="post" action="{{ path('admin_groupes_delete', {id:band.id}) }}" style="display:inline-block;">
                            <input type="hidden" name="_method" value="DELETE">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ band.id) }}">
                            <button class="btn btn-danger btn-sm">Supprimer</button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div>
            <a href="{{ path('admin_groupes_new') }}"><button type="button" class="btn btn-sm btn-primary">Ajouter un groupe</button></a>
        </div>
    </div>
{% endblock %}
