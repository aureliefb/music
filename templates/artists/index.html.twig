{% extends 'base.html.twig' %}

{% block title 'Groupes et artistes' %}

{% block body %}
<div class="container mt-4">
    <h1>Groupes & artistes</h1>
    <div class="row flex">
        {% for band in bands %}
        <div class="my-2 col-xs-4 col-md-4 col-lg-3">
            <div class="card">
                <div class="card-body">
                    <div class="card-title">
                        <p>{{ band.artist }}</p>
                    </div>
                    <div class="card-text">
                        {# mettre les styles dans des badges de couleur #}
                        <p>style</p>
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
