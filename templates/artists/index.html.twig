{% extends 'base.html.twig' %}

{% block title 'Groupes et artistes' %}

{% block body %}

<div class="container">
    <div class="mt-4 mb-5 text-center">
        <h1>Groupes & artistes</h1>
    </div>

    <div class="row col-xs-4 col-md-4 col-lg-3">
        {{ form_start(form) }}
            <form>
                <div class="col">   
                    {{ form_row(form.artistName) }}
                    {{ form_row(form.musicStyle) }}
                </div>
                <div class="col">
                    <button type="submit" class="btn btn-primary btn-sm">Chercher</button>
                </div>
            </form>
        {{ form_end(form) }}
    </div>

    <div class="row flex">
        {% for band in bands %}
        <div class="my-2 col-xs-4 col-md-4 col-lg-3">
            <a href="{{ path('app_groupes_show', {id:band.id}) }}">
            <!-- modifier le css pour ne pas avoir les textes soulignÃ©s en bleu -->
            <div class="card" style="color: #000;">
                <div class="card-body">
                    <div class="card-title">
                        <p>{{ band.artist }}</p>
                    </div>
                    <div class="card-text">
                    <p>
                        {# mettre les styles dans des badges de couleur #}
                        {% if band.idStyle %}
                            {{ band.idStyle }} ->  style 
                        {% else %}
                            style
                        {% endif %}
                    </p>
                    </div>
                </div>
            </div>
            </a>
        </div>
        {% endfor %}
    </div>
    <div class="pagination">
        {{ knp_pagination_render(bands) }}
    </div>
</div>

{% endblock %}
